{{#if username}}
<h1 class="text-center">Courses</h1>
<section>
    <a href="/course/create" class="btn btn-warning ">Create Course</a>
    <form class="search float-right" method="post" action="/search">
        <label>Search: </label>
        <input type="text" name="search">
        <input type="submit" class="btn btn-primary" value="Search">
    </form>
</section>
{{else}}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Tutorials</h1>
        <p class="lead">Start Self-Learning Today: Be the best Developer in the company</p>
    </div>
</div>
<div>
    <h1 class="text-center">Top Courses</h1>

    <div>
      {{/if}} 
        <div class="container mt-3">
            <div class="row d-flex justify-content-center">
                {{#if courses}}
                <div class="card-deck">
                    {{#each courses }}

                    <div class="card mb-4">
                        <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap" width="400">
                        <div class="card-body">
                            <h4 class="card-title">{{title}}</h4>
                            <small class="float-right">Enrolled: {{enrolledUsers}}</small>
                        </div>
                        {{#if isUser}}
                        <div class="card-footer">
                            <a href="/course/{{_id}}/details"><button type="button"
                                    class="btn btn-primary">Details</button></a>
                            <small class="float-right">{{created}}</small>
                        </div>
                        {{/if}}


                    </div>

                    {{/each}}

                </div>

            </div>
            {{else}}
            <h4 class="text-center">No courses...</h4>
            {{/if}}


        </div>
    </div>